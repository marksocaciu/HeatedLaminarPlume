{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "2D Symmetric Experiment Configuration",
  "type": "object",
  "required": ["config_version", "experiments"],
  "properties": {
    "config_version": { "type": "string" },
    "defaults": { "type": "object" },
    "experiments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "author", "fluid", "wire", "dimensions"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "author": { "type": "string", "minLength": 1 },
          "notes": { "type": "string" },

          "fluid": {
            "type": "object",
            "required": ["material_name", "properties"],
            "properties": {
              "material_name": { "type": "string" },
              "model": { "type": "string" },
              "properties": { "type": "object" }
            }
          },

          "wire": {
            "type": "object",
            "required": ["material_name", "properties"],
            "properties": {
              "material_name": { "type": "string" },
              "model": { "type": "string" },
              "properties": { "type": "object" }
            }
          },

          "dimensions": {
            "type": "object",
            "required": ["domain", "wire"],
            "properties": {
              "domain": {
                "type": "object",
                "required": ["type", "coordinates"],
                "properties": {
                  "type": { "const": "2D_symmetric" },
                  "coordinates": {
                    "type": "object",
                    "required": ["x_min", "x_max", "y_min", "y_max"],
                    "properties": {
                      "x_min": { "type": "number", "const": 0.0 },
                      "x_max": { "type": "number", "exclusiveMinimum": 0.0 },
                      "y_min": { "type": "number", "const": 0.0 },
                      "y_max": { "type": "number", "exclusiveMinimum": 0.0 }
                    }
                  }
                }
              },
              "wire": {
                "type": "object",
                "required": ["diameter"],
                "properties": {
                  "diameter": { "type": "number", "exclusiveMinimum": 0.0 }
                }
              }
            }
          },
          
          "mesh": { "type": "object" },
          "initial_conditions": { 
            "type": "object",
            "properties": {
              "temperature": { "type": "number" },
              "wire_length": { "type": "number" },
              "heat_volume": { "type": "number" },
              "heat_surface": { "type": "number" },
              "heat_length": { "type": "number" }
            }
        },
        "measurement_points": { 
          "type": "array" 
        },
        
        "additionalProperties": true
      }
    }
  }
}
}
